<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fragments.u_dashboard">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/poppins_light"
            android:text="Hello,"
            android:textColor="#7d7d7d"
            android:textSize="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dash_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/poppins_medium"
            android:text=""
            android:textColor="@color/black"
            android:textSize="22dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="312dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="100dp">

            <!-- add a Image image.png in your Drawable folder -->
            <ImageView
                android:id="@+id/dash_profilepic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar_admin" />

        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/searchbox"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="108dp"
            android:background="@drawable/edittext_border"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:fontFamily="@font/poppins_light"
            android:hint="  Search for event..."
            android:paddingLeft="13dp"
            android:textSize="13dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/filterbutton"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="108dp"
            android:background="@drawable/edittext_border"
            android:drawableLeft="@drawable/ic_baseline_tune_24"
            app:layout_constraintLeft_toRightOf="@id/searchbox"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="@null" />

        <HorizontalScrollView
            android:id="@+id/horview_chips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/searchbox"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:scrollbars="none"
            >

        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true"
            app:chipSpacingHorizontal="-9dp"
            >


        <com.google.android.material.chip.Chip
            android:id="@+id/tag1"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:backgroundTint="#f2f2f2"
             />

        <com.google.android.material.chip.Chip
            android:id="@+id/tag2"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#f2f2f2"
            app:layout_constraintLeft_toRightOf="@id/tag1"
            app:layout_constraintTop_toBottomOf="@id/searchbox" />

        <com.google.android.material.chip.Chip
            android:id="@+id/tag3"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#f2f2f2"
            app:layout_constraintLeft_toRightOf="@id/tag2"
            app:layout_constraintTop_toBottomOf="@id/searchbox" />

        <com.google.android.material.chip.Chip
            android:id="@+id/tag4"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#f2f2f2"
            app:layout_constraintLeft_toRightOf="@id/tag3"
            app:layout_constraintTop_toBottomOf="@id/searchbox" />

        <com.google.android.material.chip.Chip
            android:id="@+id/tag5"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#f2f2f2"
            app:layout_constraintLeft_toRightOf="@id/tag4"
            app:layout_constraintTop_toBottomOf="@id/searchbox" />


        </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Events for you"
            android:fontFamily="@font/source_sans_pro_semibold"
            app:layout_constraintTop_toBottomOf="@id/horview_chips"
            android:textSize="25dp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>