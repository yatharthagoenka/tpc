<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription=""
        android:scaleType="centerCrop"
        android:src="@drawable/loginb2"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="TPC"
        android:textColor="#dedede"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="."
        android:textColor="#dedede"
        android:textSize="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signInButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="GOOGLE SIGN IN"
        android:gravity="center"
        android:fontFamily="@font/work_sans_extralight"
        android:textColor="#fff"
        android:textFontWeight="900"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="195dp"
        />

    <ImageView
        android:id="@+id/loginbackarrow"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:clickable="true"
        android:alpha="0"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintLeft_toLeftOf="@id/logemail"
        app:layout_constraintBottom_toTopOf="@id/logemail"
        />

    <EditText
        android:id="@+id/logemail"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="408dp"
        android:paddingLeft="10dp"
        android:clickable="true"
        android:textColor="#ebebeb"
        android:fontFamily="@font/work_sans_extralight"
        android:background="@drawable/selector_line_bellow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/logemailtextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/work_sans_extralight"
        android:text="REGISTERED ID"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="30dp"
        android:textColor="#ebebeb"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="@id/logemail"
        app:layout_constraintBottom_toBottomOf="@id/logemail"
        />

    <TextView
        android:id="@+id/logpasswordtextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/work_sans_extralight"
        android:text="PASSWORD"
        android:layout_marginLeft="400dp"
        android:layout_marginBottom="35dp"
        android:textColor="#ebebeb"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="@id/logemail"
        app:layout_constraintBottom_toBottomOf="@id/logemail"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loginbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logemail"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/loginbutton_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PASSWORD"
            android:gravity="center"
            android:fontFamily="@font/work_sans_extralight"
            android:textColor="#ababab"
            android:textFontWeight="900"
            android:textSize="14dp"
            android:layout_marginLeft="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="4dp"
            android:backgroundTint="#ababab"
            android:src="@drawable/long_arrow"
            app:layout_constraintLeft_toRightOf="@id/loginbutton_text"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <TextView
        android:id="@+id/linkreg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:gravity="center"
        android:fontFamily="@font/work_sans_extralight"
        android:textColor="#ababab"
        android:textFontWeight="900"
        android:textSize="16dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="80dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginbutton"
        />


    <EditText
        android:id="@+id/logpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>








